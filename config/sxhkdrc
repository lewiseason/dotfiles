# dmenus
super + space
 dmenu_run -b -i

super + p
 pass-dmenu -b -x clipboard -f '^(?!Old)'

super + s
 screenlayout-dmenu -b

# Terminal
F2
 wmctrl -xa urxvt || urxvr

ctrl + alt + t
 wmctrl -xa urxvt || urxvt

ctrl + alt + shift + t
 urxvt

# Web Browser
F3
 wmctrl -xa google-chrome || google-chrome

ctrl + alt + w
 wmctrl -xa google-chrome || google-chrome

ctrl + alt + shift + w
 google-chrome

# Screen Locker
ctrl + alt + l
 i3lock -d -c 000000

# Volume
super + button{4,5,2}
  amixer -q sset Master,0 {5%+,5%-,toggle}

XF86Audio{RaiseVolume,LowerVolume,Mute}
  amixer -q sset Master,0 {5%+,5%-,toggle}

# Screen Brightness
ctrl + super + button{5,4}
 xbacklight -{dec,inc} 10 -steps 1

XF86MonBrightness{Down,Up}
 xbacklight -{dec,inc} 10 -steps 1

# Screenshot
ctrl + Print
 cd ~/Pictures && scrot -sm

alt + Print
 imgur-screenshot.sh
