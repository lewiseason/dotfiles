# Launch applications
super + space
 dmenu_run -b -i

super + p
 pass-dmenu -b -x clipboard -s ~/.password-store/Red61

super + s
 screenlayout-dmenu -b

ctrl + alt + t
 konsole

ctrl + alt + w
 sensible-browser

ctrl + alt + l
 xautolock -locknow

# Volume
super + button{4,5,2}
  amixer -q sset Master,0 {5%+,5%-,toggle}

XF86Audio{RaiseVolume,LowerVolume,Mute}
  amixer -q sset Master,0 {5%+,5%-,toggle}

# Screen Brightness
ctrl + super + button{5,4}
  xbacklight -{dec,inc} 5 -time 80

XF86MonBrightness{Down,Up}
  xbacklight -{dec,inc} 5 -time 80

# Screenshot
ctrl + shift + Print
  cd ~/Pictures; scrot -m -d2 && notify-send "Screenshot saved in ~/Pictures"

alt + Print
  notify-send -t 1000 -u low "Upload screenshot to imgur" "Click to select window\nDrag to select region"; imgur-screenshot.sh
