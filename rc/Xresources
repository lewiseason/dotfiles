! Load required extensions
URxvt.perl-ext-common: default,matcher,font-size,clipboard,fullscreen

! When we receive a bell, notify the Window Manager using an ICCCM urgent hint
URxvt.urgentOnBell: true

! Launch shell as a login shell
URxvt*loginShell: true

! Do not copy trailing spaces
XTerm*TrimSelection: true

! Appearance
URxvt.font: xft:Monospace:size=8
URxvt.cursorColor: LightGreen
URxvt*scrollBar: false

! keybind: tmux window switching (Ctrl+PageUp/PageDown)
URxvt.keysym.Control-Shift-ISO_Left_Tab: \033[5;5~
URxvt.keysym.Control-Tab: \033[6;5~

! keybind: Clipboard
URxvt.keysym.Control-Shift-C: perl:clipboard:copy
URxvt.keysym.Control-Shift-V: perl:clipboard:paste

! keybind: Font Size
URxvt.keysym.Control-equal: font-size:increase
URxvt.keysym.Control-minus: font-size:decrease

! keybind: Fullscreen
URxvt.keysym.F11: perl:fullscreen:switch

! special
*.foreground:   #a2a2a2
*.background:   #292929
*.cursorColor:  #a2a2a2

! black
*.color0:       #4e4e4e
*.color8:       #777777

! red
*.color1:       #a9635d
*.color9:       #ffbbb2

! green
*.color2:       #468459
*.color10:      #9ddeaf

! yellow
*.color3:       #84763d
*.color11:      #e0ce91

! blue
*.color4:       #5879af
*.color12:      #b3d1ff

! magenta
*.color5:       #9c6594
*.color13:      #fabdf0

! cyan
*.color6:       #008592
*.color14:      #79e0ed

! white
*.color7:       #cfcfcf
*.color15:      #ffffff

