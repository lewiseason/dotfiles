
# Keep fresh up to date
fresh freshshell/fresh bin/fresh  --bin

# ~/. files
fresh rc/\*      --file

# scripts
fresh bin/\*     --bin

# generic shell
fresh shell/aliases/\*
fresh shell/config/\*

# vim
fresh-options --file=~/.vimrc --marker=\"
  fresh twe4ked/dotfiles vim/vundle_before.vim
  fresh editors/vim/vundle.vim
  fresh twe4ked/dotfiles vim/vundle_after.vim

  fresh editors/vim/global.vim
  fresh editors/vim/appearance.vim
  fresh editors/vim/indent.vim
  fresh editors/vim/search.vim

  fresh editors/vim/keys.vim
fresh-options

# sublime text 3
for file in editors/st3/*; do
  path="~/.config/sublime-text-3/Packages/User/`basename \"$file\"`"
  # https://github.com/freshshell/fresh/issues/119
  path=$(echo "$path" | sed -e 's/ /\\ /g' -e 's/(/\\(/g' -e 's/)/\\)/g')
  fresh "$file" --file="$path"
done

# bash
fresh-options --file=~/.bashrc
  fresh freshshell/fresh contrib/source-build.sh
  fresh freshshell/fresh contrib/completion/fresh-completion.bash
  fresh shell/bash/\*
fresh-options

# zsh
fresh-options --file=~/.zshrc
  fresh freshshell/fresh contrib/source-build.sh
  fresh freshshell/fresh contrib/completion/fresh-completion.zsh
  fresh shell/zsh/\*
fresh-options

# fonts
fresh fonts                --file=~/.fonts/

fresh config/ssh           --file=~/.ssh/config
fresh config/redshift.conf --file=~/.config/redshift.conf
fresh config/terminator    --file=~/.config/terminator/config

# ln -sf ~/.dotfiles/foo ~/.config/foo
