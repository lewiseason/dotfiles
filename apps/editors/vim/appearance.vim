set nonumber
set nowrap
set linebreak
set list listchars=trail:~
" set columns=80
set showmode

" Observe modelines in files
set modelines=1

" Update git gutter when I stop typing
let g:gitgutter_realtime = 1
set updatetime=200

" Theming
syntax enable
let g:solarized_termcolors=256
"set background=light
"colorscheme solarized
