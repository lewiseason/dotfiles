# Launch applications
super + space
 dmenu_run -b -i

ctrl + alt + t
 konsole

ctrl + alt + w
 sensible-browser

ctrl + alt + l
 i3lock -d -c 000000

# toggle tint2
ctrl + super + space
 pgrep -U $UID tint2 && pkill tint2 || (tint2 &)

# Volume
super + button{4,5,2}
  amixer -q sset Master,0 {1%+,1%-,toggle}

XF86Audio{RaiseVolume,LowerVolume,Mute}
  amixer -q sset Master,0 {1%+,1%-,toggle}

# Screen Brightness
ctrl + super + button{5,4}
  xbacklight -{dec,inc} 5 -time 80

XF86MonBrightness{Down,Up}
  xbacklight -{dec,inc} 5 -time 80

# Screenshot
Print
  cd ~/Pictures; scrot -m -d2 && notify-send "Screenshot saved in ~/Pictures"

alt + Print
  notify-send "Upload screenshot to imgur" "Click to select window\nDrag to select region"; imgur-screenshot.sh
