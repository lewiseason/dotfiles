tint2 &
sxhkd &

# Network Manager Icon
(sleep 3 && nm-applet) &

# Notifications
(sleep 1 && dunst) &

# Desktop background
if [ -f "~/.config/nitrogen/bg-saved.cfg" ]; then
  # Nitrogen config exists - restore it
  (sleep 1 && nitrogen --restore) &
else
  # Nitrogen not configured yet
  (sleep 3 && ~/bin/wallpaper && nitrogen ~/Pictures/wallpaper) &
fi

