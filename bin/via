#!/bin/sh

if [ "$#" == "0" ]; then
  echo "Usage: $(basename $0) <instance> [<server>]"
  exit 1
fi

if [ "$#" == "1" ]; then
  URL="https://support.red61.com/api/nojws.php?instance=$1"
fi

if [ "$#" == "2" ]; then
  URL="https://support.red61.com/api/nojws.php?instance=$1&host=$2"
fi

if [ ! -x "/bin/zenity" ]; then
  echo "You must have zenity installed to use this helper script."
  exit 1
fi

if [ -x "/bin/curl" ]; then
  curl -s "$URL" | /bin/sh
elif [ -x "/bin/wget" ]; then
  wget -q -O - "$URL" | /bin/sh
else
  zenity --error --text "You must have curl or wget installed to use this helper script."
fi
